<% extend('./layout/layout') %>

<%- include('partials/pagination') %>
  <div class="row my-4 justify-content-center">
    <div class="col-md-9">

      <% for (let i in articles) { %>
      <div class="card mb-3 shadow">
        <div class="card-body">
          <a href="/post/<%- articles[i].id %>">
            <h2 class="text-primary"><%- articles[i].title %></h2>
          </a>
          <div class="d-flex flex-row text-secondary small">
            <div class="p-2">
              <span class="fa fa-clock-o"></span><%- moment(articles[i].updateTime * 1000).format('YYYY/MM/DD') %></div>
            <div class="p-2">
              <i class="fa fa-tag" aria-hidden="true"></i>
              <a href="#" class="text-info">
                <% for (let item in categories) { %>
                  <% if(item === articles[i].category) { %> 
                    <%= categories[item].name %>
                  <% } %>
                <% } %>
              </a>
            </div>
          </div>
          <div>
            <%- articles[i].content.slice(0,150) %> ....
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>


 <%- include('partials/pagination') %>